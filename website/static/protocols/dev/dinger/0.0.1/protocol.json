{
  "protocol": "https://dinger.app/protocol",
  "types": {
    "ding": {
      "schema": "ding",
      "dataFormats": ["application/json"]
    }
  },
  "structure": {
    "ding": {
      "$actions": [
        {
          "who": "anyone",
          "can": "write"
        },
        {
          "who": "author",
          "of": "ding",
          "can": "read"
        },
        {
          "who": "recipient",
          "of": "ding",
          "can": "read"
        }
      ]
    }
  }
}
